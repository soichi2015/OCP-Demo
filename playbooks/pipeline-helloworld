apiVersion: v1
items:
- kind: "BuildConfig"
  apiVersion: "v1"
  metadata:
    name: "pipeline-helloworld"
  spec:
    triggers:
      - github:
          secret: 5Mlic4Le
        type: GitHub
      - generic:
          secret: FiArdDBH
          type: Generic
    strategy:
      type: "JenkinsPipeline"
      jenkinsPipelineStrategy:
        jenkinsfile: |
          node {
              stage ("Build")
                    echo '*** Build Starting ***'
                    openshiftBuild bldCfg: 'helloworld', buildName: '', checkForTriggeredDeployments: 'false', commitID: '', namespace: '', showBuildLogs: 'true', verbose: 'true'
                    openshiftVerifyBuild bldCfg: 'helloworld', checkForTriggeredDeployments: 'false', namespace: '', verbose: 'false'
                    echo '*** Build Complete ***'
              stage ("Deploy and Verify in Development Env")
                    echo '*** Deployment Starting ***'
                    openshiftDeploy depCfg: 'helloworld', namespace: '', verbose: 'false', waitTime: ''
                    openshiftVerifyDeployment authToken: '', depCfg: 'helloworld', namespace: '', replicaCount: '1', verbose: 'false', verifyReplicaCount: 'false', waitTime: ''
                    echo '*** Deployment Complete ***'
               }

kind: List
metadata: {}